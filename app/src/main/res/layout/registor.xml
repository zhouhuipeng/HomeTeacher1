<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/zhucebeijing"
        android:background="#038ffa"
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:titleTextColor="@android:color/black"
            android:title="家教通"
            android:layout_height="44dp"
            app:title="家教通注册"
            app:navigationIcon="@mipmap/back">

        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/zhuceimage"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/zhuce"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/register"
                />
            <TextView
                android:layout_below="@+id/zhuce"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:text="注册"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/inputID"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/zhucebeijing"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/id" />

        <EditText
            android:id="@+id/inputid"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入账号"
            />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/inputPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputID"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="54dp">
        <ImageView
            android:background="@mipmap/password"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <EditText
            android:id="@+id/inputpassword"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="请输入6位密码"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputPassword2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputPassword"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:background="@mipmap/password"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <EditText
            android:id="@+id/inputpassword2"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请再次输入密码"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputPhone"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputPassword2"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:background="@mipmap/inputphone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <EditText
            android:id="@+id/inputphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入电话号码"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chooserose"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputPhone"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <RadioButton
            android:id="@+id/choosestudent"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="64dp"
            android:layout_weight="1"
            android:text="我是学生" />

        <RadioButton
            android:id="@+id/chooseteacher"
            android:layout_gravity="center_vertical"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:text="我是老师"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Resgitor"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/chooserose"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <Button
            android:id="@+id/resgitor_"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#038ffa"
            android:text="注册"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Resgitor"
        android:layout_width="match_parent"
        android:layout_height="24dp">
        <TextView
            android:id="@+id/backtologin"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="《已有账号，点击登陆》"
            />
    </LinearLayout>

</RelativeLayout>