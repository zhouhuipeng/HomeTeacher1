<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/ly_center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_above="@+id/ly_under"
        android:layout_alignParentTop="true">

    </LinearLayout>
    <LinearLayout

        android:id="@+id/ly_under"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#038ffa"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/ly_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ly_biji1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"

                android:drawableTop="@mipmap/home"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="#B300"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ly_biji2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/search"
                android:gravity="center"
                android:text="找老师"
                android:textColor="#B300"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ly_biji3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/search"
                android:gravity="center"
                android:text="找学生"
                android:textColor="#B300"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ly_biji4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/myhome"
                android:gravity="center"
                android:text="我的"
                android:textColor="#B300"
                android:textSize="15sp"/>
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>