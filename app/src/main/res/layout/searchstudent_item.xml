<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_gravity="center"
           android:id="@+id/student_image"
           android:layout_width="78dp"
           android:layout_height="78dp"
           android:background="@mipmap/studenttouxiang"/>
       <RelativeLayout
           android:layout_marginLeft="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/student_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginTop="5dp"
               android:layout_below="@+id/student_name"
               android:id="@+id/student_telephone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <LinearLayout
               android:id="@+id/hahhah"
               android:layout_below="@+id/student_telephone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_marginTop="5dp"
                   android:id="@+id/student_helpstudygrade"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginLeft="5dp"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/Student_Helpstudyitem"
                   />
           </LinearLayout>

           <TextView
               android:layout_marginTop="5dp"
               android:layout_below="@+id/hahhah"
               android:id="@+id/student_helpstudyarea"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

   </LinearLayout>
</RelativeLayout>