<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/caicai"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="#038ffa"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/haha"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="@mipmap/touxiang"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:text="修改补课信息"
            android:layout_below="@+id/haha"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/name"
        android:layout_below="@+id/caicai"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@mipmap/xingming"/>
        <EditText
            android:id="@+id/change_T_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您的姓名"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/xueli"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/studyhistory"
            />
        <Spinner
            android:id="@+id/change_T_teacher_studyhistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/studyhistory">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nianji"
        android:layout_below="@+id/xueli"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@mipmap/grade"/>
        <Spinner
            android:id="@+id/change_T_teacher_studygrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/helpstudygrade">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kemu"
        android:layout_below="@id/nianji"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@mipmap/kemu"
            />
        <Spinner
            android:id="@+id/change_T_teacher_studyitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/helpstudyitm">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/quyu"
        android:layout_below="@id/kemu"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@mipmap/quyu"/>
        <Spinner
            android:id="@+id/change_T_teacher_studyarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/helpstudyarea">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/change_T_submit"
        android:layout_below="@+id/quyu"
        android:layout_width="match_parent"
        android:background="#038ffa"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="44dp"
        android:text="提交"
        />
</RelativeLayout>